<!DOCTYPE html>
<html>
  <head>
    <title>HomeworkPortal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= render 'layouts/partials/navbar' %>
      <%= render 'layouts/partials/flash' %> 

    
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-9"> <%= yield %></div>
            
          <div class="col-sm-3">
            <div class="sidebar">
            <h4>Latest Articles</h4>
            <div class="list">
              <% @reports.take(10).each do |a| %>
                <%= link_to a.title, "#{a.link}", target:"_blank" %><br />
              <% end %>
            </div>
            </div>
          </div>
        </div>

     
    </div>

  </body>
</html>
