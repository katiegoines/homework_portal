<h1>Sign Up</h1>

<%= form_for @user do |f| %>
    <%= f.text_field :name, placeholder:"First Name" %><br />
    <%= f.text_field :surname, placeholder:"Last Name" %><br />
    <%= f.text_field :email, placeholder:"Email" %><br />
    <%= f.password_field :password, placeholder:"Password" %><br />
    <%= f.password_field :password_confirmation, placeholder:"Confirm Password" %><br /><br />
    <%= f.text_field :code, placeholder:"Teacher Code" %>

    <%= f.submit %>
<% end %>