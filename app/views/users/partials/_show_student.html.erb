    <h3>Recently Submitted</h3>
    <% @user.assignments.where(submit:"Yes").order('updated_at DESC').take(2).each do |a| %>
        <%= render 'layouts/partials/card', :a => a %>
    <% end %>
    <div class="clear"></div>
    <p class="lead">
        <%= link_to "See all assignments", assignments_path, class:'btn' %>
        <%= link_to "Post a new assignment", new_assignment_path, class:"btn" %>
        <%= link_to "Change Password", edit_user_path, class:'btn' %>
    </p>