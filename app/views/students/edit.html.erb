<div class="formish">

<h1 class="form_head">Change Your Password</h1>
<%= form_for @student do |f| %>
    <div class="form-group">
        <%= f.password_field :password, placeholder:"New Password", class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder:"Confirm New Password", class:"form-control" %>
    </div>

    <%= f.submit "Change Password", class:"btn btn-primary" %>
    <%= link_to "Cancel", url_for(:back), class:'btn btn-secondary' %>
<% end %>
</div>