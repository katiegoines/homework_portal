<h1>Teachers#index</h1>
<p>Find me in app/views/teachers/index.html.erb</p>

<h2>Teachers</h2>
<ul>
<% @teachers.each do |t| %>
<li><%= link_to "#{t.name} #{t.surname}, #{t.type}, ID: #{t.id}", "/teachers/#{t.id}" %></li>
<% end %>
</ul>

<h2>Students</h2>
<ul>
<% @students.each do |s| %>
<li><%= link_to "#{s.name} #{s.surname}, #{s.type}, ID: #{s.id}", "/students/#{s.id}" %></li>
<% end %>
</ul>


<%= link_to "New Teacher", new_teacher_path %><br />
<%= link_to "New Student", new_student_path %><br />
