<div class="jumbotron">
    <div class="jumbotron-overlay">
        <small><%= student? ? "Student Account" : "Teacher Account" %> - Edit Profile</small>
        <h1 class="display-3"><%= "#{current_user.name} #{current_user.surname}" %></h1>
    </div>
</div>

<div class="formish">
    <h1 class="form_head">Edit Assignment</h1>
    <%= form_for @assignment do |f| %>
        <div class="form-group">
            <%= f.label :assignment_number, "Assignment number" %>
            <%= f.number_field :assignment_number, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :title, "Title of Article" %>
            <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :body, "Science Reporter" %>
            <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :category, "Category of Article" %>
            <%= f.text_field :category, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :link, "Link to Article" %>
            <%= f.text_field :link, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :submit, "Are you ready to submit?" %>
            <%= f.select :submit, ["No", "Yes"], class:"form-control" %>
        </div>
        <%= f.submit "Update", class:"btn btn-primary" %>
        <%= link_to "Cancel", assignment_path, class:"btn btn-secondary" %>
        <%= link_to "Delete", assignment_path, data: {confirm: "Are you sure you want to delete this report? This cannot be undone."}, method: 'delete', class:"btn btn-danger" %>
    <% end %>
</div>
